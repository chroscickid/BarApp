@model IEnumerable<BrApp.Models.Drink>


@{
    ViewBag.Title = "Orders";
}

<h2>Orders Queue</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td> 
    <td>
        @Html.ActionLink("Prepare Drink", "Prepare", item) | @Html.ActionLink("Cancel Drink", "Cancel", item)

    </td>
    </tr>
}

</table>

